<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
	
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.bytecode.use_reflection_optimizer">false</property>	
		
		<!-- Database connection settings -->
        <!-- JDBC connection pool (use the built-in) -->
               
        <property name="connection.pool_size">5</property>
		
        <!-- SQL dialect -->
        <!-- Enable Hibernate's automatic session context management -->
        <!-- Disable the second-level cache -->
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">false</property>
        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">validate</property>
        
       	<property name="hibernate.auto_close_session">true</property>
       	<property name="hibernate.enable_lazy_load_no_trans">true</property>
	   	<!-- configuration pool via c3p0 -->
	   	<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>	   	
	   	<property name= "hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>   
	   	<property name="hibernate.connection.url">jdbc:mysql://localhost/iforex?autoReconnect=true&amp;characterEncoding=UTF-8</property>
	   	<property name="hibernate.connection.username">root</property>
	   	<property name="hibernate.connection.password">ionoff$db</property>	   	
	   	<property name="hibernate.default_schema">iforex</property>
	   	
	   	<property name= "hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
	   	<property name="hibernate.c3p0.acquire_increment">5</property>
	   	<property name="hibernate.c3p0.idle_test_period">1800</property>
	   	<property name="hibernate.c3p0.max_size">600</property>
	   	<property name="hibernate.c3p0.max_statements">50</property>
	   	<property name="hibernate.c3p0.min_size">5</property>
	   	<property name="hibernate.c3p0.timeout">1800</property>
		
		<!-- Mapping files -->
		<mapping resource="net/xapxinh/forex/server/entity/candle/EurUsdM5Candle.hbm.xml"/>
		<mapping resource="net/xapxinh/forex/server/entity/candle/EurUsdM15Candle.hbm.xml"/>
		<mapping resource="net/xapxinh/forex/server/entity/candle/EurUsdM30Candle.hbm.xml"/>
		<mapping resource="net/xapxinh/forex/server/entity/candle/EurUsdH1Candle.hbm.xml"/>
		<mapping resource="net/xapxinh/forex/server/entity/candle/EurUsdH4Candle.hbm.xml"/>
		<mapping resource="net/xapxinh/forex/server/entity/candle/EurUsdD1Candle.hbm.xml"/>
		
		<mapping resource="net/xapxinh/forex/server/entity/wave/EurUsdM5Wave.hbm.xml"/>
		<mapping resource="net/xapxinh/forex/server/entity/wave/EurUsdM15Wave.hbm.xml"/>
		<mapping resource="net/xapxinh/forex/server/entity/wave/EurUsdM30Wave.hbm.xml"/>
		<mapping resource="net/xapxinh/forex/server/entity/wave/EurUsdH1Wave.hbm.xml"/>
		<mapping resource="net/xapxinh/forex/server/entity/wave/EurUsdH4Wave.hbm.xml"/>
		<mapping resource="net/xapxinh/forex/server/entity/wave/EurUsdD1Wave.hbm.xml"/>
		
		<mapping resource="net/xapxinh/forex/server/entity/wave/EurUsdM5WaveCandle.hbm.xml"/>
		<mapping resource="net/xapxinh/forex/server/entity/wave/EurUsdM15WaveCandle.hbm.xml"/>
		<mapping resource="net/xapxinh/forex/server/entity/wave/EurUsdM30WaveCandle.hbm.xml"/>
		<mapping resource="net/xapxinh/forex/server/entity/wave/EurUsdH1WaveCandle.hbm.xml"/>
		<mapping resource="net/xapxinh/forex/server/entity/wave/EurUsdH4WaveCandle.hbm.xml"/>
		<mapping resource="net/xapxinh/forex/server/entity/wave/EurUsdD1WaveCandle.hbm.xml"/>
		
	</session-factory>
</hibernate-configuration>