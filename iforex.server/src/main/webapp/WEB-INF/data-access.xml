<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/tx
		http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">
	    
    <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
      <property name="dataSource" ref="dataSource"/>
      <property name="configLocation" value="classpath:hibernate.cfg.xml" />      
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
      <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <tx:annotation-driven transaction-manager="transactionManager"/>
    
    <bean id="candleDao" class="net.xapxinh.forex.server.persistence.dao.impl.CandleDaoImpl">
      <constructor-arg ref="sessionFactory" />    
    </bean>
    
     <bean id="candleService" class="net.xapxinh.forex.server.persistence.service.impl.CandleServiceImpl">
      <constructor-arg ref="candleDao" />    
    </bean>
    
    <bean id="waveDao" class="net.xapxinh.forex.server.persistence.dao.impl.WaveDaoImpl">
      <constructor-arg ref="sessionFactory" />    
    </bean>
    
     <bean id="waveService" class="net.xapxinh.forex.server.persistence.service.impl.WaveServiceImpl">
      <constructor-arg ref="waveDao" />    
    </bean>
</beans>